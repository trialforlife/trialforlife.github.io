<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cloudconsulting.TrackTrace" version="1.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>TrackTrace</name>
  <description>
    TrackTrace application
  </description>
  <author email="dev@cloudconsulting.no" href="http://cloudconsulting.no">
    Cloud Consulting Dev Team
  </author>
  <content src="index.html" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>

  <preference name="fullscreen" value="true" />
  <preference name="webviewbounce" value="true" />
  <preference name="BackupWebStorage" value="local"/>
  <preference name="EnableViewportScale" value="true"/>
</widget>
